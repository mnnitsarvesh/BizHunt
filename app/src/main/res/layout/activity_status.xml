<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.sarvesh.bizhunt.StatusActivity">

    <include layout="@layout/my_title_bar"
        android:id="@+id/status_appbar"
        >
    </include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:text="Update Your Status Here"
        android:textSize="24sp" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="166dp"
        android:layout_marginStart="45dp"
        android:hint="@string/your_status"
        android:id="@+id/status_input" />

    <Button
        android:id="@+id/status_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/status_input"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="@string/update_status" />




</RelativeLayout>
